<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Title="My Bio App"
             BackgroundColor="Black"
             mc:Ignorable="d"
             x:Class="AboutMe.MainPage">


    <StackLayout>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Frame 1 = About Me, Frame 2 = Contact Info, Frame 3 = Skills -->

            <Frame 
               CornerRadius="5"
               BackgroundColor="Blue"
               HasShadow="True"
               Margin="20"
               Opacity="0.9"
               Grid.Row="0"
               Grid.Column="0">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="AboutMeButton_Clicked"></TapGestureRecognizer>
                </Frame.GestureRecognizers>
            
            <StackLayout Orientation="Horizontal" Spacing="20">
                
                <BoxView BackgroundColor="Black"
                     HeightRequest="150"
                     WidthRequest="200" />

                    <Image
                           Source="https://img.icons8.com/wired/64/000000/about.png"
                           WidthRequest="200"
                           HeightRequest="150" />

                   <Label 
                        Text="About Me" 
                        TextColor="White"  
                        FontSize="24"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand" />
                
                </StackLayout>
        </Frame>
            
            <Frame 
               CornerRadius="5"
               BackgroundColor="Blue"
               HasShadow="True"
               Margin="20"
               Opacity="0.9"
               Grid.Row="1"
               Grid.Column="0">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ContactButton_Clicked"></TapGestureRecognizer>
                </Frame.GestureRecognizers>

                <StackLayout Orientation="Horizontal" Spacing="20">

                    <BoxView BackgroundColor="Black"
                     HeightRequest="150"
                     WidthRequest="200" />

                    <Image
                        HeightRequest="150"
                        WidthRequest="200"
                        Source="https://img.icons8.com/ios/50/000000/contacts.png"/>

                    <Label
                        Text="Contact Me"
                        TextColor="White"
                        FontSize="24"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand" />

                </StackLayout>
            </Frame>

            <Frame 
               CornerRadius="5"
               BackgroundColor="Blue"
               HasShadow="True"
               Margin="20"
               Opacity="0.9"
               Grid.Row="2"
               Grid.Column="0">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SkillsButton_Clicked"></TapGestureRecognizer>
                </Frame.GestureRecognizers>

                <StackLayout Orientation="Horizontal" Spacing="20">

                    <BoxView BackgroundColor="Black"
                     HeightRequest="150"
                     WidthRequest="200" />

                    <Image
                        HeightRequest="150"
                        WidthRequest="200"
                        Source="https://img.icons8.com/carbon-copy/100/000000/development-skill.png"/>

                    <Label
                        Text="Skills"
                        TextColor="White"
                        HorizontalOptions="Center"
                        FontSize="24"
                        VerticalOptions="CenterAndExpand" />

                </StackLayout>
            </Frame>

        </Grid>
    </StackLayout>

</ContentPage>
